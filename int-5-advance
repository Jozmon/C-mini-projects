#include <stdio.h>

int main(){
	
	//in input type 1 the array comes pre filled with numbers.
	//in input type 0 the user manually writes the numbers.
	int intype = 0;
	
	int a = 0;
	int i = 0;
	int c = 0;
	
	int AR[5];
	
	int FILLAR[5]={1,4,5,8,6};
	
	if (intype == 1){
		while ( c < 5){

		AR[c] = FILLAR[c];
		
		++c;
		
		}
	}else if (intype == 0){


			
		while( a < 5) {
			
		printf ("Write a number for cell %d :",a);
		
		scanf ("%d",&AR[a]);
		
		++a;
		
		}
	}
	
	
	
	
	
	
	while(i<5){
		
		printf ("The number: %d",AR[i]);
		
		if (AR[i] % 2 == 0){
			printf (" is even\n");
		}else {
			printf (" is odd\n");
		}
		
		
		++i;
		
	}
	
	return 0;
}

